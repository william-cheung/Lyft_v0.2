<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" 
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/dialog_src_location"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/dialog_src_editor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/dialog_src_discription"
            android:background="@drawable/textview_layer_list"
            android:ems="10"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:shadowColor="#DCDCDC"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_src_discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dialog_src_editor"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:shadowColor="#DCDCDC"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="起点 ："
            android:textColor="#000000"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_dst_location"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <TextView
            android:id="@+id/dialog_dst_discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dialog_dst_editor"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:shadowColor="#DCDCDC"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="终点 ："
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/dialog_dst_editor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/dialog_dst_discription"
            android:background="@drawable/textview_layer_list"
            android:ems="10"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:shadowColor="#DCDCDC"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_request_buttons"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="4" >

        <Button
            android:id="@+id/dialog_button_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg_selector"
            android:gravity="center"
            android:shadowColor="#DCDCDC"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="取  消"
            android:textColor="@drawable/button_text_color_selector"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dialog_button_ok"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg_selector"
            android:gravity="center"
            android:shadowColor="#DCDCDC"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="确  定"
            android:textColor="@drawable/button_text_color_selector"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>