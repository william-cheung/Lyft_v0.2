<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_panel_layer_list"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/driver_photos_layout"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/imageview_layer_list"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/driver_photo_view"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:contentDescription="@string/photo_of_user"
            android:src="@drawable/handsome_driver" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DCDCDC"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <ImageView
            android:id="@+id/car_photo_view"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:layout_margin="5dp"
            android:src="@drawable/car" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver_basic_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/textview_layer_list"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/driver_name_and_score_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="程冠希"
                android:textColor="#696969"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/score_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/star_blue" />

            <TextView
                android:id="@+id/score_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="4.9"
                android:textColor="#696969"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/driver_src_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/src_address_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="F :"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/src_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_weight="5"
                android:gravity="left|center"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="深圳大学城清华大学"
                android:textColor="#0000FF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/driver_dst_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dst_address_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="T :"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dst_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_weight="5"
                android:gravity="left|center"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="世界之窗"
                android:textColor="#0000FF"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver_info_panel_controls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/close_info_panel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/close_icon_large" />

        <ImageView
            android:id="@+id/make_call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/call_icon" />

        <ImageView
            android:id="@+id/handshake_done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/done_icon" />

        <ImageView
            android:id="@+id/start_payment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/pay_icon" />
    </LinearLayout>

</LinearLayout>