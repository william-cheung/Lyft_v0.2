<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_panel_layer_list"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/passenger_addresses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/src_address"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:layout_weight="5"
            android:background="@drawable/textview_layer_list"
            android:gravity="center"
            android:shadowColor="#DCDCDC"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="深圳大学城清华大学"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dst_address"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_weight="5"
            android:background="@drawable/textview_layer_list"
            android:gravity="center"
            android:shadowColor="#DCDCDC"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="世界之窗"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver_photos_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/driver_photo_layout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:layout_weight="5"
            android:background="@drawable/imageview_layer_list" >

            <ImageView
                android:id="@+id/driver_photo_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:contentDescription="@string/photo_of_user"
                android:src="@drawable/handsome_driver" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/carr_photo_layout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_weight="5"
            android:background="@drawable/imageview_layer_list" >

            <ImageView
                android:id="@+id/car_photo_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:src="@drawable/car" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mileage_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
       
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5" 
            android:gravity="center">

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="程冠希"
                android:textColor="#696969"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/score_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/star_blue" />

            <TextView
                android:id="@+id/score_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="4.9"
                android:textColor="#696969"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5" 
             android:gravity="center">

            <ImageView
                android:id="@+id/make_call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/call_icon" />

            <ImageView
                android:id="@+id/handshake_done_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/done_icon" />

            <ImageView
                android:id="@+id/start_payment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/pay_icon" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>