<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:layout_margin="5dp"
    android:background="@drawable/popup_panel_layer_list">

    <RelativeLayout
        android:id="@+id/photo_name_layout"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="@drawable/imageview_layer_list" >

        <ImageView
            android:id="@+id/passenger_photo_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:contentDescription="@string/photo_of_user"
            android:src="@drawable/beautiful_girl1" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/passenger_addresses"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/src_address_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6" >

            <TextView
                android:id="@+id/src_address_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="F："
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/src_address"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:layout_alignBaseline="@+id/src_address_description"
                android:layout_alignBottom="@+id/src_address_description"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/src_address_description"
                android:background="@drawable/textview_layer_list"
                android:gravity="center"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="深圳大学城清华大学"
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dst_address_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6" >

            <TextView
                android:id="@+id/dst_address_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="T："
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dst_address"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:layout_alignBaseline="@+id/dst_address_description"
                android:layout_alignBottom="@+id/dst_address_description"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/dst_address_description"
                android:background="@drawable/textview_layer_list"
                android:gravity="center"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="世界之窗"
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/agree_button_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8" >

            <Button
                android:id="@+id/driver_agree_button"
                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_bg_selector2"
                android:gravity="center"
                android:shadowColor="#DCDCDC"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="愿  意  搭  载"
                android:textColor="@drawable/button_text_color_selector"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>