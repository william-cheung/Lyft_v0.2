<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#565656</item>
    </style>

    <style name="MyCustomTheme" parent="android:Theme.Light">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="PopupWindowAnim">
        <item name="android:windowEnterAnimation">@anim/popup_window_scalein</item>
        <item name="android:windowExitAnimation">@anim/popup_window_scaleout</item>
    </style>

    <style name="PopupWindowAnim2">
        <item name="android:windowEnterAnimation">@anim/popup_window_scalein2</item>
        <item name="android:windowExitAnimation">@anim/popup_window_scaleout2</item>
    </style>

    <style name="PopupWindowAnim3">
        <item name="android:windowEnterAnimation">@anim/popup_window_transin</item>
        <item name="android:windowExitAnimation">@anim/popup_window_transout</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

</resources>